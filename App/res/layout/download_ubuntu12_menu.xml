<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" >

	<ScrollView
	    android:id="@+id/ScrollLayout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" >

		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" >
            <TextView android:text="@string/ubuntu12_image_description" android:textAppearance="?android:textAppearanceSmall" android:layout_width="wrap_content" android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btn_DownloadLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/download_Large" />

            <Button
                android:id="@+id/btn_DownloadSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/download_Small" />

            <Button
                android:id="@+id/btn_DownloadCore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/download_Core" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
