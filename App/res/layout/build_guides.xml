<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" >
	<LinearLayout android:id="@+id/TitleLayout" style="@style/TitleBar" >
		<ImageButton android:src="@drawable/title_home" android:onClick="onClickHome" android:contentDescription="@string/content_Description_home" style="@style/TitleBarAction" />
		<ImageView style="@style/TitleBarSeparator" android:contentDescription="@string/content_Description_dummy"/>
		<TextView style="@style/TitleBarText" />
		<ImageButton android:src="@drawable/title_about" android:onClick="onClickAbout" android:contentDescription="@string/content_Description_about" style="@style/TitleBarAction" />
		<ImageButton android:src="@drawable/title_news" android:onClick="onClickSearch" android:contentDescription="@string/content_Description_search" style="@style/TitleBarAction" />
	</LinearLayout>

	<Button android:id="@+id/btn_Back" android:text="@string/button_back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_alignParentLeft="true" android:layout_marginBottom="5dp" />

	<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/ScrollLayout" android:layout_width="fill_parent" android:layout_height="0dip" android:layout_above="@id/btn_Back" android:layout_below="@id/TitleLayout" >
		<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" xmlns:android="http://schemas.android.com/apk/res/android">
            <TextView android:text="@string/buildGuides_Intro" android:layout_width="wrap_content" android:layout_height="wrap_content" />
			<Button android:id="@+id/btn_BuildUbuntu" android:text="@string/btn_BuildGuide_Ubuntu" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center_horizontal" />
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
